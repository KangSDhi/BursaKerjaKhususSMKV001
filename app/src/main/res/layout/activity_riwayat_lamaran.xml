<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.sinon.bursakerjakhusussmk.RiwayatLamaran">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarRiwayat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
    >

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/halaman_riwayat_pendaftaran"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:gravity="center_horizontal"/>

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerRiwayat"
            android:layout_below="@+id/toolbarRiwayat"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>



</RelativeLayout>
