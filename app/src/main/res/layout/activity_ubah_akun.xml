<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.sinon.bursakerjakhusussmk.Daftar">

    <Toolbar
            android:id="@+id/headerToolbarUbahAkun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ubah Akun"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:gravity="center_horizontal"/>

    </Toolbar>

    <ScrollView
            android:id="@+id/scrollLayout"
            android:layout_below="@id/headerToolbarUbahAkun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="false">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgProfileAkun"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/face2"
                />

            </RelativeLayout>

            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtNama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:inputType="textCapWords"
                        android:hint="Nama Lengkap"
                        android:textColorHint="@color/colorAccent">

                </android.support.design.widget.TextInputEditText>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtTempatLahir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:inputType="text"
                        android:hint="Tempat Lahir"
                        android:textColorHint="@color/colorAccent">

                </android.support.design.widget.TextInputEditText>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtTanggalLahir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:inputType="text"
                        android:hint="Tanggal Lahir"
                        android:textColorHint="@color/colorAccent"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/edtJenisKelamin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/jenis_kelamin"
                        android:padding="8dp"
                >

                </android.support.v7.widget.AppCompatSpinner>


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtAlamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:inputType="text"
                        android:hint="Alamat"
                        android:textColorHint="@color/colorAccent">

                </android.support.design.widget.TextInputEditText>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtAlamatKabupatenKota"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:layout_margin="8dp"
                        android:inputType="text"
                        android:hint="Kabupaten/Kota"
                        android:textColorHint="@color/colorAccent">

                </android.support.design.widget.TextInputEditText>

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
            >

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtTinggiBadan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="6"
                        android:layout_margin="8dp"
                        android:inputType="numberSigned"
                        android:hint="Tinggi badan"
                        android:textColorHint="@color/colorAccent">
                </android.support.design.widget.TextInputEditText>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text=".Cm"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtBeratBadan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="6"
                        android:layout_margin="8dp"
                        android:inputType="numberSigned"
                        android:hint="Berat Badan"
                        android:textColorHint="@color/colorAccent">

                </android.support.design.widget.TextInputEditText>


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text=".Kg"/>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtAsalSekolah"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:inputType="textCapCharacters"
                        android:hint="Asal Sekolah"
                        android:textAllCaps="true"
                        android:textColorHint="@color/colorAccent">

                </android.support.design.widget.TextInputEditText>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtJurusan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:inputType="text"
                        android:hint="Jurusan"
                        android:textColorHint="@color/colorAccent">

                </android.support.design.widget.TextInputEditText>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtTahunLulus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:inputType="numberSigned"
                        android:hint="Tahun Lulus"
                        android:textColorHint="@color/colorAccent">

                </android.support.design.widget.TextInputEditText>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtNomorPonsel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:inputType="numberSigned"
                        android:hint="Nomor Ponsel"
                        android:textColorHint="@color/colorAccent">

                </android.support.design.widget.TextInputEditText>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >

                <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:inputType="textEmailAddress"
                        android:hint="Email"
                        android:textColorHint="@color/colorAccent">

                </android.support.design.widget.TextInputEditText>

            </android.support.design.widget.TextInputLayout>

           <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:weightSum="2">

               <Button
                   android:id="@+id/btnPerbaruiAkun"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:layout_margin="16dp"
                   android:text="perbarui"
                   android:textColor="@android:color/white"
                   android:theme="@style/PrimaryFlatButton"
               />

               <Button
                       android:id="@+id/btnPengaturanSandi"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:layout_margin="16dp"
                       android:text="ganti sandi"
                       android:theme="@style/SecondaryFlatButton"/>


           </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
